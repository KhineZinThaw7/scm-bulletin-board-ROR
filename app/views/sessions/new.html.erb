<div class="row justify-content-center py-5">
	<div class="col-md-6">
			<% if flash[:notice] %>
				<div class="alert alert-warning alert-dismissible mb-3">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<strong><%= flash[:notice] %></strong>
				</div>
			<% end %>
			<div class="card">
        <div class="card-header">
            <h3 class="text-center">Login</h3>
        </div>
        <div class="card-body">
            <form accept-charset="UTF-8" action="/login" method="post">
              <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" />
            
                <div class="form-group">
                  <label for="">Email <span class="text-danger"><small><b>(*required)</b></small></span></label>
                  <input type="email" name="email"  class="form-control">
                </div>
            
                <div class="form-group">
                  <label for="">Password <span class="text-danger"><small><b>(*required)</b></small></span></label>
                  <input type="password" name="password"  class="form-control">
                </div>

                <div class="row mb-3 justify-content-end mx-3">
                  <label for=""><%= link_to "Forget Password?", '/forget-password' %></label>
                </div>

                <div class="form-group">
                  <input type="submit" value="Login" class="btn btn-primary btn-md btn-block">
                </div>
            </form>
        </div>
			</div>
	</div>
</div>
