<div class="card">
  <div class="card-header">
    User Details
    <%= link_to "Back", users_path, class: "btn btn-secondary float-right" %>
  </div>
  <div class="card-body">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <label for="name" class="col-sm-10 col-form-label"><%= @user.name %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <label for="email" class="col-sm-10 col-form-label"><%= @user.email %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label">Created Date</label>
        <div class="col-sm-10">
            <label for="date" class="col-sm-10 col-form-label"><%= @user.created_at.strftime('%Y/%m/%d') %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="posts" class="col-sm-2 col-form-label">User's Posts</label>
        <div class="col-sm-10">
            <% @user.posts.each do |post| %>
                <label for="title" class="col-sm-10 col-form-label"><%= link_to post.title, post %></label>
            <% end %>
        </div>
    </div>
  </div>
</div>