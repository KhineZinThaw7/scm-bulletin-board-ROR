<div class="card">
  <div class="card-header">
    Post Details
    <%= link_to "Back", posts_path, class: "btn btn-secondary float-right" %>
  </div>
  <div class="card-body"><div class="form-group row">
    <label for="title" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
        <span class="col-sm-10 col-form-label"><%= @post.title %></span>
    </div>
</div>
<div class="form-group row">
    <label for="description" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
        <span class="col-sm-10 col-form-label"><%= @post.description %></span>
    </div>
</div>
<div class="form-group row">
    <label for="status" class="col-sm-2 col-form-label">Status</label>
    <div class="col-sm-10">
        <span class="col-sm-10 col-form-label"><%= @post.status == 1 ? 'Active' : 'Inactive' %></span>
    </div>
</div>
<div class="form-group row">
    <label for="date" class="col-sm-2 col-form-label">Created Date</label>
    <div class="col-sm-10">
        <span class="col-sm-10 col-form-label"><%= @post.created_at.strftime('%b %d, %Y') %></span>
    </div>
</div>
<div class="form-group row">
    <label for="created_user" class="col-sm-2 col-form-label">Created User</label>
    <div class="col-sm-10">
        <span class="col-sm-10 col-form-label"><%= @post.user ? @post.user.name : 'User' %></span>
    </div>
</div>
<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Updated Date</label>
    <div class="col-sm-10">
        <span class="col-sm-10 col-form-label"><%= @post.updated_at.strftime('%b %d, %Y') %></span>
    </div>
</div>
  </div>
</div>