<div class="card">
    <div class="card-header">
      Category Details
      <%= link_to "Back", categories_path, class: "btn btn-secondary float-right" %>
    </div>
    <div class="card-body">
      <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
              <label for="name" class="col-sm-10 col-form-label"><%= @category.name %></label>
          </div>
      </div>
      <div class="form-group row">
          <label for="posts" class="col-sm-2 col-form-label">Category's Posts</label>
          <div class="col-sm-10">
              <% @category.posts.each do |post| %>
                  <label for="title" class="col-sm-10 col-form-label"><%= post.title %>,</label>
              <% end %>
          </div>
      </div>
    </div>
  </div>