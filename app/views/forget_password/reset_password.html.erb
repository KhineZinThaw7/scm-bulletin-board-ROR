<div class="row justify-content-center py-5">
	<div class="col-md-6">
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible mb-3">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong><%= flash[:notice] %></strong>
      </div>
    <% end %>
    <% if flash[:warning] %>
      <div class="alert alert-warning alert-dismissible mb-3">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong><%= flash[:warning] %></strong>
      </div>
    <% end %>
    <div class="card">
        <div class="card-header">
          <h3 class="text-center">Reset Password</h3>
        </div>
        <div class="card-body">
          <%= form_for @user, :url => passwordReset_path(params[:id]), :method => "put" do |f| %>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control", required: "" %>
              <% if @user.errors.any? %>
                <ul>
                  <% @user.errors.full_messages_for(:password).each do |message| %>
                    <li class="text-danger"><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation  %>
              <%= f.password_field :password_confirmation , class: "form-control", required: "" %>
              <% if @user.errors.any? %>
                <ul>
                  <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                    <li class="text-danger"><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            </div>
            <div class="actions">
              <%= f.submit "Update Password", class: "btn btn-primary btn-md btn-block" %>
            </div>
          <% end %>
        </div>
    </div>
	</div>
</div>
