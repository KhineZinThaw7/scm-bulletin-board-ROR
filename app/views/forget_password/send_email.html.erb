<div class="row justify-content-center py-5">
	<div class="col-md-6">
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible mb-3">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong><%= flash[:notice] %></strong>
      </div>
    <% end %>
          <% if flash[:warning] %>
      <div class="alert alert-warning alert-dismissible mb-3">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong><%= flash[:warning] %></strong>
      </div>
    <% end %>
    <div class="card">
        <div class="card-header">
          <h3 class="text-center">Forgot Password</h3>
        </div>
        <div class="card-body">
            <form accept-charset="UTF-8" action="/forget-password" method="post">
              <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" />
            
                <div class="form-group">
                  <label for="">Type your email to reset your password! <span class="text-danger"><small><b>(*required)</b></small></span></label>
                  <input type="email" name="email"  class="form-control">
                </div>
                <div class="form-group">
                  <input type="submit" value="Submit" class="btn btn-primary btn-md btn-block">
                </div>
            </form>
            <%= link_to "Back", '/login', class: "btn btn-secondary float-right" %>
        </div>
    </div>
	</div>
</div>
