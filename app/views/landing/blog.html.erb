<div class="jumbotron">
    <div class="conatiner">
        <h1 class="display-4 font-italic">SCM Bulletin Board</h1>
        <p class="lead my-3">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what's most interesting in this post's contents.</p>
        <p class="lead mb-0"><a class="btn btn-info btn-lg" href="#" role="button">Learn more &raquo;</a></p>
    </div>
</div>

  <div class="row mb-2">
    <% @posts.each do |post| %>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 border border-info">
                <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary"><%= post.user ? post.user.name : 'Bob' %></strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#"><%= post.title %></a>
                </h3>
                <div class="mb-1 text-muted"><%= post.created_at.strftime('%b %d, %Y') %></div>
                <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                <a href="#">Continue reading</a>
                </div>
                <% if post.image.attached? %>
                    <%= image_tag post.image, style: "width: 150px", class: "card-img-right flex-auto d-none d-md-block" %>
                <% end %>
            </div>
        </div>
    <% end %>
  </div>
</div>