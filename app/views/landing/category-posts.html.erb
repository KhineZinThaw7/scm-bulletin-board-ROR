<%= render 'landing/header', title: "CATEGORY PAGE" %>
  <div class="row mb-2">
    <% @category.posts.each do |post| %>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 border border-info">
                <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary"><%= post.user ? post.user.name : 'Bob' %></strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#"><%= post.title %></a>
                </h3>
                <div class="mb-1 text-muted"><%= post.created_at.strftime('%b %d, %Y') %></div>
                <p class="card-text mb-auto"><%= post.description.first(90) %></p>
                <%= link_to 'Continue Reading...', postDetail_path(post.id) %>
                </div>
                <% if post.image.attached? %>
                    <%= image_tag post.image, style: "width: 150px", class: "card-img-right flex-auto d-none d-md-block" %>
                <% end %>
            </div>
        </div>
    <% end %>
  </div>
</div>